<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.meha.dardan.bedtimecalculator.MainActivity"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@string/top_title"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="wake up at one of these times:"
            android:textSize="24sp"
            android:textStyle="bold" />


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/wakeButtonOne"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_row="1"
                android:background="#ffa647"
                android:text="12:05PM"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/wakeButtonTwo"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_row="1"
                android:background="#ffa647"
                android:text="12:05PM"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/wakeButtonThree"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_column="2"
                android:layout_row="1"
                android:layout_toEndOf="@+id/button2"
                android:background="#ffa647"
                android:text="12:05PM"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/wakeButtonFour"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_row="2"
                android:background="#ffa647"
                android:text="12:05PM"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/wakeButtonFive"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_row="2"
                android:background="#e1923d"
                android:text="12:05PM"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/wakeButtonSix"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_column="2"
                android:layout_row="2"
                android:layout_toEndOf="@+id/button2"
                android:background="#e1923d"
                android:text="12:05PM"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/wakeButtonSeven"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_row="3"
                android:background="#e1923d"
                android:text="12:05PM"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/wakeButtonEight"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_row="3"
                android:background="#e1923d"
                android:text="12:05PM"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/wakeButtonNine"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_column="2"
                android:layout_row="3"
                android:layout_toEndOf="@+id/button2"
                android:background="#e1923d"
                android:text="12:05PM"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />


        </GridLayout>


        <TextView
            android:id="@+id/textViewBottomText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="@string/bottom_text"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/timePickerButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="showTimePickerDialog"
            android:text="@string/time_picker_text"
            android:textColor="#FF3D6DDE"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewBottomText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:text="Then you should sleep at:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/sleepButtonOne"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_row="1"
                android:background="#477eff"
                android:text="12:05PM"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sleepButtonTwo"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_row="1"
                android:background="#477eff"
                android:text="12:05PM"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sleepButtonThree"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_column="2"
                android:layout_row="1"
                android:layout_toEndOf="@+id/button2"
                android:background="#3d6dde"
                android:text="12:05PM"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sleepButtonFour"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_row="2"
                android:background="#FF3D6DDE"
                android:text="12:05PM"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sleepButtonFive"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_row="2"
                android:background="#FF3D6DDE"
                android:text="12:05PM"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sleepButtonSix"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_column="2"
                android:layout_row="2"
                android:layout_toEndOf="@+id/button2"
                android:background="#FF3D6DDE"
                android:text="12:05PM"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

        </GridLayout>

        <TextView
            android:id="@+id/textViewBottomText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:text="(Tap on any time to set alarm)"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>


</ScrollView>
